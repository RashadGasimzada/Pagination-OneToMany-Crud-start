@model Poster
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>Poster</h4>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Posters</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Poster" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> Image </th>
                                    <th> Discount </th>
                                    <th> Cookie </th>
                                    <th> WeekCount </th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td> <img style="width: 250px; height: 150px; border-radius: unset" src="~/assets/image/@Model.Image" alt="Slider" /> </td>
                                    <td>@Model.Discount</td>
                                    <td>@Model.Cookie</td>
                                    <td>@Model.WeekCount</td>
                                </tr>
                                <tr>
                                    <a class="btn btn-primary btn-sm" asp-action="Index">Go Back</a>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

